#--------------------------------------
# Basic Options
#--------------------------------------
autodetach on
startup_message off
vbell off

#--------------------------------------
# Status bar
#--------------------------------------
hardstatus on
hardstatus alwayslastline
hardstatus string "%= %3n %t%? [ %h ]%? %="
caption string '%{= kW}%-Lw%{= kG}%50> %n%f* %t%{= kW}%+Lw%< %{= kG}%-=%D %d %M %Y  %c:%s%{-}'
caption always

