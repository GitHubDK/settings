#------------------------------------------------------------------------------#
# shabang
#------------------------------------------------------------------------------#
snippet #!
	#!/bin/bash

#------------------------------------------------------------------------------#
# if conditional
#------------------------------------------------------------------------------#
snippet if
	if [[ ${1:condition} ]]; then
		${2:#statements}
	fi

#------------------------------------------------------------------------------#
# else if conditional
#------------------------------------------------------------------------------#
snippet elif
	elif [[ ${1:condition} ]]; then
		${2:#statements}

#------------------------------------------------------------------------------#
# for loop
#------------------------------------------------------------------------------#
snippet for
	for (( ${2:i} = 0; $2 < ${1:count}; $2++ )); do
		${3:#statements}
	done

#------------------------------------------------------------------------------#
# while loop
#------------------------------------------------------------------------------#
snippet while
	while [[ ${1:condition} ]]; do
		${2:#statements}
	done

#------------------------------------------------------------------------------#
# until loop
#------------------------------------------------------------------------------#
snippet until
	until [[ ${1:condition} ]]; do
		${2:#statements}
	done

#------------------------------------------------------------------------------#
# case conditional
#------------------------------------------------------------------------------#
snippet case
	case ${1:word} in
		${2:pattern})
			${3};;
	esac
